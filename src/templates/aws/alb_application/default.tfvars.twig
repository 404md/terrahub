# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id = "123456789012"
region     = "us-east-1"

#############
# top level #
#############
lb_name               = "{{ name }}"
lb_internal           = false
lb_load_balancer_type = "application"

################
# log atribute #
################
lb_log_prefix         = "{{ name }}-lb"
lb_log_enabled        = true

#####################
# optional atribute #
#####################
lb_idle_timeout                     = 60
lb_enable_deletion_protection       = false
lb_enable_cross_zone_load_balancing = false
lb_enable_http2                     = true

########
# tags #
########
custom_tags  = {}
default_tags = {
  "ThubName"    = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

