    resource:
      aws_dx_bgp_peer:
        {{ name }}:
          address_family: '${var.{{ name }}_address_family}'
          bgp_asn: '${var.{{ name }}_bgp_asn}'
          virtual_interface_id: '${var.{{ name }}_virtual_interface_id}'
