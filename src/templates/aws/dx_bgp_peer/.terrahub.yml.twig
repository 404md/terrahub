    variable:
      {{ name }}_address_family:
        type: 'string'
      {{ name }}_bgp_asn:
        type: 'int'
      {{ name }}_virtual_interface_id:
        type: 'string'
    output:
      id:
        value: '${aws_dx_bgp_peer.{{ name }}.id}'
      thub_id:
        value: '${aws_dx_bgp_peer.{{ name }}.id}'
      customer_address:
        value: '${aws_dx_bgp_peer.{{ name }}.customer_address}'
      bgp_status:
        value: '${aws_dx_bgp_peer.{{ name }}.bgp_status}'
      amazon_address:
        value: '${aws_dx_bgp_peer.{{ name }}.amazon_address}'
      bgp_auth_key:
        value: '${aws_dx_bgp_peer.{{ name }}.bgp_auth_key}'
