resource "aws_lb_listener_rule" "{{ name }}" {
  listener_arn = "${var.lb_listener_rule_listener_arn}"
  priority     = "${var.lb_listener_rule_priority}"

  action {
    type             = "${var.lb_listener_rule_action_type}"
    target_group_arn = "${var.lb_listener_rule_action_target_group_arn}"
  }

  condition {
    field  = "${var.lb_listener_rule_condition_field}"
    values = ["${var.lb_listener_rule_condition_values}"]
  }
}