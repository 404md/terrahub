    variable:
      {{ name }}_source_endpoint_arn:
        type: 'string'
      {{ name }}_table_mappings:
        type: 'string'
      {{ name }}_migration_type:
        type: 'string'
      {{ name }}_replication_instance_arn:
        type: 'string'
      {{ name }}_replication_task_id:
        type: 'string'
      {{ name }}_target_endpoint_arn:
        type: 'string'
    output:
      id:
        value: '${aws_dms_replication_task.{{ name }}.id}'
      thub_id:
        value: '${aws_dms_replication_task.{{ name }}.id}'
      replication_task_arn:
        value: '${aws_dms_replication_task.{{ name }}.replication_task_arn}'
