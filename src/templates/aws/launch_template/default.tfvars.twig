# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id                 = "123456789012"
region                     = "us-east-1"

#############
# top level #
#############
launch_template_name              = "{{ name }}"
launch_template_api_termination   = true
launch_template_ebs_optimized     = true
launch_template_shutdown_behavior = "stop"
launch_template_instance_type     = "t2.micro"

#########################
# block device mappings #
#########################
launch_template_ebs_device_name           = "/dev/sda1"
launch_template_ebs_delete_on_termination = true
launch_template_ebs_encrypted             = false
launch_template_ebs_volume_size           = 8
launch_template_ebs_volume_type           = "standard"

#########################
# additional attributes #
#########################
launch_template_cpu_credits        = "standard"
launch_template_market_type        = "spot"
launch_template_monitoring_enabled = false
launch_template_availability_zone  = "us-east-1a"

######################
# network_interfaces #
######################
launch_template_ni_associate_public_ip_address = false

########
# tags #
########
launch_template_resource_type = "instance"
custom_tags                   = {}
default_tags                  = {
								  "ThubName"    = "{{ name }}"
								  "ThubCode"    = "{{ code }}"
								  "ThubEnv"     = "default"
								  "Description" = "Managed by TerraHub"
								}

