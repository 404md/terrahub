    resource:
      aws_cloudwatch_metric_alarm:
        {{ name }}:
          metric_name: '${var.{{ name }}_metric_name}'
          namespace: '${var.{{ name }}_namespace}'
          period: '${var.{{ name }}_period}'
          evaluation_periods: '${var.{{ name }}_evaluation_periods}'
          alarm_name: '${var.{{ name }}_alarm_name}'
          threshold: '${var.{{ name }}_threshold}'
          comparison_operator: '${var.{{ name }}_comparison_operator}'
