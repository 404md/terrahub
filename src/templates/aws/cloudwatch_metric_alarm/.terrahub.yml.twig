          # statistic: ''
          # datapoints_to_alarm: 0
          # dimensions: 
          #   '[TO_BE_REPLACED]': ''
          # extended_statistic: ''
          # evaluate_low_sample_count_percentiles: ''
          # alarm_actions: []
          # ok_actions: []
          # unit: ''
          # actions_enabled: false
          # insufficient_data_actions: []
          # treat_missing_data: ''
    variable:
      {{ name }}_metric_name:
        type: 'string'
      {{ name }}_namespace:
        type: 'string'
      {{ name }}_period:
        type: 'int'
      {{ name }}_evaluation_periods:
        type: 'int'
      {{ name }}_alarm_name:
        type: 'string'
      {{ name }}_threshold:
        type: 'float'
      {{ name }}_comparison_operator:
        type: 'string'
    output:
      id:
        value: '${aws_cloudwatch_metric_alarm.{{ name }}.id}'
      thub_id:
        value: '${aws_cloudwatch_metric_alarm.{{ name }}.id}'
      evaluate_low_sample_count_percentiles:
        value: '${aws_cloudwatch_metric_alarm.{{ name }}.evaluate_low_sample_count_percentiles}'
      arn:
        value: '${aws_cloudwatch_metric_alarm.{{ name }}.arn}'
