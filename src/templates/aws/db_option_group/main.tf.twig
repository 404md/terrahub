resource "aws_db_option_group" "{{ name }}" {
  name                     = "${var.db_option_group_name}"
  option_group_description = "${var.db_option_group_description}"
  engine_name              = "${var.db_option_group_engine_name}""sqlserver-ee"
  major_engine_version     = "${var.db_option_group_major_engine_version}""11.00"

  option {
    option_name = "${var.db_option_group_option_name}"
 
    option_settings {
      name  = "${var.db_option_group_setting_name}"
      value = "${var.db_option_group_setting_value}"
    }

    port                           = "${var.db_option_group_port}"
    version                        = "${var.db_option_group_version}"
    db_security_group_memberships  = ["${var.db_option_group_db_security_group_memberships}"]
    vpc_security_group_memberships = ["${var.db_option_group_vpc_security_group_memberships}"]
  }

  tags = "${merge(var.default_tags, var.custom_tags)}"
}