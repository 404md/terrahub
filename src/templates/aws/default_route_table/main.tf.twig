resource "aws_default_route_table" "{{ name }}" {
  default_route_table_id = "${var.default_route_table_id}"
  propagating_vgws       = ["${var.default_route_table_propagating_vgws}"]

  route {
    cidr_block                = "${var.default_route_table_cidr_block}"
    egress_only_gateway_id    = "${var.default_route_table_egress_only_gateway_id}"
    gateway_id                = "${var.default_route_table_gateway_id}"
    nat_gateway_id            = "${var.default_route_table_nat_gateway_id}"
    instance_id               = "${var.default_route_table_instance_id}"
    vpc_peering_connection_id = "${var.default_route_table_vpc_peering_connection_id}"
    network_interface_id      = "${var.default_route_table_network_interface_id}"
  }

  tags = "${merge(var.default_tags, var.custom_tags)}"
}