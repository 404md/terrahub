resource "aws_s3_bucket_notification" "{{ name }}" {
  bucket = "${var.aws_s3_bucket_notification_s3_bucket_name}"

  lambda_function {
    lambda_function_arn = "arn:aws:lambda:${var.region}:${var.account_id}:function:${var.aws_s3_bucket_notification_lambda_function_name}"
    events              = ["${var.aws_s3_bucket_notification_events}"]
    filter_prefix       = "${var.aws_s3_bucket_notification_filter_prefix}"
    filter_suffix       = "${var.aws_s3_bucket_notification_filter_suffix}"
  }
}
