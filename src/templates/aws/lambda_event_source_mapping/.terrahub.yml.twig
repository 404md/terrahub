      last_modified:
        value: '${aws_lambda_event_source_mapping.{{ name }}.last_modified}'
      state:
        value: '${aws_lambda_event_source_mapping.{{ name }}.state}'
      state_transition_reason:
        value: '${aws_lambda_event_source_mapping.{{ name }}.state_transition_reason}'
      uuid:
        value: '${aws_lambda_event_source_mapping.{{ name }}.uuid}'
