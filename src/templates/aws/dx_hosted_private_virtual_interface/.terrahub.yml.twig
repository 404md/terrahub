    resource:
      aws_dx_hosted_private_virtual_interface:
        {{ name }}:
          name: '${var.{{ name }}_name}'
          vlan: '${var.{{ name }}_vlan}'
          address_family: '${var.{{ name }}_address_family}'
          connection_id: '${var.{{ name }}_connection_id}'
          bgp_asn: '${var.{{ name }}_bgp_asn}'
          owner_account_id: '${var.{{ name }}_owner_account_id}'
          # bgp_auth_key: ''
          # amazon_address: ''
          # customer_address: ''
    variable:
      {{ name }}_name:
        type: 'string'
      {{ name }}_vlan:
        type: 'int'
      {{ name }}_address_family:
        type: 'string'
      {{ name }}_connection_id:
        type: 'string'
      {{ name }}_bgp_asn:
        type: 'int'
      {{ name }}_owner_account_id:
        type: 'string'
    output:
      id:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.id}'
      thub_id:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.id}'
      bgp_auth_key:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.bgp_auth_key}'
      amazon_address:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.amazon_address}'
      jumbo_frame_capable:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.jumbo_frame_capable}'
      arn:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.arn}'
      customer_address:
        value: '${aws_dx_hosted_private_virtual_interface.{{ name }}.customer_address}'
