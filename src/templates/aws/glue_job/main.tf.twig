resource "aws_glue_job" "{{ name }}" {
  name               = "${var.glue_job_name}"
  role_arn           = "arn:aws:iam::${var.account_id}:role/${var.glue_job_iam_role_name}"
  description        = "${var.glue_job_description}"
  connections        = "${var.glue_job_connections}"
  allocated_capacity = "${var.glue_job_allocated_capacity}"
  timeout            = "${var.glue_job_timeout}"
  command {
    name            = "${var.glue_job_command_script_name}"
    script_location = "s3://${var.glue_job_command_script_location_path}/${var.glue_job_command_script_file_name}"
  }
  default_arguments = "${var.glue_job_default_arguments}"
}
