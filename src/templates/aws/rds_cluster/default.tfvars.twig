# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id                 = "123456789012"
region                     = "us-east-1"

#############
# top level #
#############
rds_cluster_identifier              = "{{ name }}"
rds_cluster_engine                  = "aurora-postgresql"
rds_cluster_availability_zones      = ["us-east-1a","us-east-1b","us-east-1c"]
rds_cluster_database_name           = "{{ name }}_db"
rds_cluster_master_username         = "root"
rds_cluster_master_password         = "root!root"
rds_cluster_backup_retention_period = 5
rds_cluster_preferred_backup_window = "07:00-09:00"
rds_cluster_skip_final_snapshot     = false
rds_cluster_backtrack_window        = 0
rds_cluster_storage_encrypted       = false
rds_cluster_apply_immediately       = false

########
# tags #
########
custom_tags  = {}
default_tags = {
  "ThubName"    = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

