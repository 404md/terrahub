# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id                 = "123456789012"
region                     = "us-east-1"

#############
# top level #
#############
codebuild_project_name          = "{{ name }}"
codebuild_project_build_timeout = "5"
codebuild_project_description   = "Managed by TerraHub"

#############
# artifacts #
#############
codebuild_project_artifacts_type           = "NO_ARTIFACTS"
codebuild_project_artifacts_name           = "artifact_{{ name }}"
codebuild_project_artifacts_namespace_type = "NONE"
codebuild_project_artifacts_packaging      = "NONE"

###############
# environment #
###############
codebuild_project_environment_compute_type = "BUILD_GENERAL1_SMALL"
codebuild_project_environment_image        = "aws/codebuild/nodejs:6.3.1"
codebuild_project_environment_type         = "LINUX_CONTAINER"
codebuild_project_environment_variable     = {
  "name"  = "SOME_KEY2"
  "value" = "SOME_VALUE2"
  "type"  = "PARAMETER_STORE"
}
codebuild_project_environment_privileged_mode = false

##########
# source #
##########
codebuild_project_source_type            = "GITHUB"
codebuild_project_source_git_clone_depth = 1

#########
# cache #
#########
codebuild_project_cache_type = "S3"

########
# tags #
########
custom_tags  = {}
default_tags = {
  "ThubName"    = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

