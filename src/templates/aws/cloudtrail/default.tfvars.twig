# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id = "123456789012"
region     = "us-east-1"

#############
# top level #
#############
aws_cloudtrail_name                          = "{{ name }}"
aws_cloudtrail_s3_bucket_name                = ""
aws_cloudtrail_s3_key_prefix                 = "/AWSLogs/CloudTrail/"
aws_cloudtrail_include_global_service_events = false
aws_cloudtrail_enable_logging                = false
aws_cloudtrail_is_multi_region_trail         = false
aws_cloudtrail_enable_log_file_validation    = false
aws_cloudtrail_read_write_type               = "All"

########
# tags #
########
custom_tags  = {}
default_tags = {
  "Name"        = "{{ name }}"
  "Description" = "Managed by TerraHub"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
}

