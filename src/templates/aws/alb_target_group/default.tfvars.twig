# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id = "123456789012"
region     = "us-east-1"

#############
# top level #
#############
lb_target_group_name                 = "{{ name }}"
lb_target_group_port                 = 80
lb_target_group_protocol             = "HTTP"
lb_target_group_deregistration_delay = 300
lb_target_group_slow_start           = 0
lb_target_group_proxy_protocol_v2    = false

#######################
# stickiness atribute #
#######################
lb_target_group_type            = "lb_cookie"
lb_target_group_cookie_duration = 86400
lb_target_group_enabled         = true

#########################
# health_check atribute #
#########################
lb_target_group_health_check_interval = 30
lb_target_group_health_check_port     = "80"
lb_target_group_health_check_protocol = "HTTP"
lb_target_group_health_check_timeout  = 6
lb_target_group_healthy_threshold     = 3
lb_target_group_unhealthy_threshold   = 3

########
# tags #
########
custom_tags  = {}
default_tags = {
  "Name"        = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

