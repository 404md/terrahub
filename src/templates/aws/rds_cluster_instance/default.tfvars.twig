account_id                 = "123456789012"
region                     = "us-east-1"

#############
# top level #
#############
rds_cluster_instance_count                        = 2
rds_cluster_instance_engine                       = "aurora"
rds_cluster_instance_identifier                   = "{{ name }}"
rds_cluster_instance_instance_class               = "db.t2.small"
rds_cluster_instance_publicly_accessible          = false
rds_cluster_instance_apply_immediately            = false
rds_cluster_instance_monitoring_interval          = 0
rds_cluster_instance_promotion_tier               = 0
rds_cluster_instance_availability_zone            = "us-east-1a"
rds_cluster_instance_preferred_backup_window      = "04:00-09:00"
rds_cluster_instance_preferred_maintenance_window = "Mon:00:00-Mon:03:00"
rds_cluster_instance_auto_minor_version_upgrade   = true

