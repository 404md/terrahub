resource "aws_lb_listener" "{{ name }}" {
  load_balancer_arn = "${var.lb_listener_load_balancer_arn}"
  port              = "${var.lb_listener_port}"
  protocol          = "${var.lb_listener_protocol}"
  ssl_policy        = "${var.lb_listener_ssl_policy}"
  certificate_arn   = "arn:aws:iam::${var.account_id}:server-certificate/${var.lb_listener_certificate_name}"

  default_action {
    target_group_arn = "${var.lb_listener_target_group_arn}"
    type             = "${var.lb_listener_type}"
  }
}