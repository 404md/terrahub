# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id                 = "123456789012"
region                     = "us-east-1"

###########
# ingress #
###########
security_group_ingress_protocol  = -1
security_group_ingress_self      = true
security_group_ingress_from_port = 0
security_group_ingress_to_port   = 0

##########
# egress #
##########
security_group_egress_from_port   = 0
security_group_egress_to_port     = 0
security_group_egress_protocol    = -1
security_group_egress_cidr_blocks = "0.0.0.0/0"

########
# tags #
########
custom_tags  = {}
default_tags = {
  "ThubName"    = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

