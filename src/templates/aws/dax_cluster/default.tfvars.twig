# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id = "123456789012"
region     = "us-east-1"

#############
# top level #
#############
dax_cluster_id                 = "{{ name }}"
dax_cluster_node_type          = "dax.t2.small"
dax_cluster_replication_factor = "1"
dax_cluster_availability_zones = ["us-east-1a","us-east-1b"]
dax_cluster_description        = "{{ name }} Managed by TerraHub"
dax_cluster_maintenance_window = "sun:05:00-sun:09:00"

########
# tags #
########
custom_tags  = {}
default_tags = {
  "Name"        = "{{ name }}"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
  "Description" = "Managed by TerraHub"
}

