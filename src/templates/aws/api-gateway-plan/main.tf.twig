resource "aws_api_gateway_usage_plan" "{{ name }}" {
  name         = "my-usage-plan"
  description  = "${var.gateway_usage_plan_description}"
  product_code = "${var.gateway_usage_plan_product_code}"

  api_stages {
    api_id = "${var.gateway_usage_plan_api_id}"
    stage  = "${var.gateway_usage_plan_stage}"
  }

  quota_settings {
    limit  = "${var.gateway_usage_plan_limit}"
    offset = "${var.gateway_usage_plan_offset}"
    period = "${var.gateway_usage_plan_period}"
  }

  throttle_settings {
    burst_limit = "${var.gateway_usage_plan_burst_limit}"
    rate_limit  = "${var.gateway_usage_plan_rate_limit}"
  }
}
