      {{ name }}_name:
        type: 'string'
      {{ name }}_metric_name:
        type: 'string'
      {{ name }}_rate_key:
        type: 'string'
    output:
      id:
        value: '${aws_waf_rate_based_rule.{{ name }}.id}'
