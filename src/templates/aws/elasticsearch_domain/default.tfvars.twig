# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id = "123456789012"
region     = "us-east-1"

#############
# top level #
#############
aws_es_domain_name    = "{{ name }}"
aws_es_domain_version = "5.5"

###################
# encrypt at rest #
###################
aws_es_domain_encryption_enabled    = "false"
aws_es_domain_encryption_kms_key_id = ""

##################
# cluster config #
##################
aws_es_domain_itype            = "t2.micro.elasticsearch"
aws_es_domain_icount           = 1
aws_es_domain_dedicated_master = false
aws_es_domain_mtype            = ""
aws_es_domain_mcount           = 0
aws_es_domain_zone_awareness   = false

###############
# vpc options #
###############
aws_es_domain_security_group_ids = []
aws_es_domain_subnet_ids         = []

####################
# advanced options #
####################
aws_es_domain_rest_action_multi_allow_explicit_index = true
aws_es_domain_indices_fielddata_cache_size           = ""
aws_es_domain_indices_query_bool_max_clause_count    = 1024

###############
# ebs options #
###############
aws_es_domain_ebs_enabled = false
aws_es_domain_volume_type = "gp2"
aws_es_domain_volume_size = 35

####################
# snapshot options #
####################
aws_es_domain_snapshot_start = 0

########
# tags #
########
custom_tags  = {
  "Domain       = "{{ name }}"
}
default_tags = {
  "Name"        = "{{ name }}"
  "Description" = "Managed by TerraHub"
  "ThubCode"    = "{{ code }}"
  "ThubEnv"     = "default"
}

