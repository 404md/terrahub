resource "aws_elasticsearch_domain" "{{ name }}" {
  domain_name           = "${var.aws_es_domain_name}"
  elasticsearch_version = "${var.aws_es_domain_version}"

  encrypt_at_rest {
    enabled    = "${var.aws_es_domain_encryption_enabled}"
    kms_key_id = "${var.aws_es_domain_encryption_kms_key_id}"
  }

  cluster_config {
    instance_type            = "${var.aws_es_domain_itype}"
    instance_count           = "${var.aws_es_domain_icount}"
    dedicated_master_enabled = "${var.aws_es_domain_dedicated_master}"
    dedicated_master_type    = "${var.aws_es_domain_mtype}"
    dedicated_master_count   = "${var.aws_es_domain_mcount}"
    zone_awareness_enabled   = "${var.aws_es_domain_zone_awareness}"
  }

  access_policies = "${data.aws_iam_policy_document.{{ name }}.json}"

  vpc_options {
    security_group_ids = ["${var.aws_es_domain_security_group_ids}"]
    subnet_ids         = ["${var.aws_es_domain_subnet_ids}"]
  }

  advanced_options {
    "rest.action.multi.allow_explicit_index" = "${var.aws_es_domain_rest_action_multi_allow_explicit_index}"
    "indices.fielddata.cache.size"           = "${var.aws_es_domain_indices_fielddata_cache_size}"
    "indices.query.bool.max_clause_count"    = "${var.aws_es_domain_indices_query_bool_max_clause_count}"
  }

  ebs_options {
    ebs_enabled = "${var.aws_es_domain_ebs_enabled}"
    volume_type = "${var.aws_es_domain_volume_type}"
    volume_size = "${var.aws_es_domain_volume_size}"
  }

  snapshot_options {
    automated_snapshot_start_hour = "${var.aws_es_domain_snapshot_start}"
  }

  tags = "${merge(var.default_tags, var.custom_tags)}"
}
