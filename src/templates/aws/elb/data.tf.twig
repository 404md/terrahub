data "aws_vpc" "selected" {
  tags {
    Name = "${var.env} ${local.region} ${var.security_group_vpc_name}"
  }
}

data "aws_region" "current" {
  current = true
}

data "terraform_remote_state" "sg" {
  backend = "s3"

  config {
    bucket         = "prod-shared-services-vpc-terraform-state"
    key            = "shared_services_vpc/infra/steam/{{ code }}/terraform.tfstate"
    region         = "us-east-1"
    encrypt        = true
  }
}

data "aws_subnet_ids" "internal" {
  vpc_id = "${data.aws_vpc.selected.id}"

  tags {
    type = "internal"
  }
}

data "aws_subnet" "subnet_internal_0" {
  vpc_id = "${data.aws_vpc.selected.id}"
  id = "${element(data.aws_subnet_ids.internal.ids, 0)}"
}

data "aws_subnet" "subnet_internal_1" {
  vpc_id = "${data.aws_vpc.selected.id}"
  id = "${element(data.aws_subnet_ids.internal.ids, 1)}"
}

data "aws_subnet" "subnet_internal_2" {
  vpc_id = "${data.aws_vpc.selected.id}"
  id = "${element(data.aws_subnet_ids.internal.ids, 2)}"
}

data "aws_subnet_ids" "external" {
  vpc_id = "${data.aws_vpc.selected.id}"

  tags {
    type = "external"
  }
}

data "aws_subnet" "subnet_external_0" {
  vpc_id = "${data.aws_vpc.selected.id}"
  id = "${element(data.aws_subnet_ids.external.ids, 0)}"
}

data "aws_subnet" "subnet_external_1" {
  vpc_id = "${data.aws_vpc.selected.id}"
  id = "${element(data.aws_subnet_ids.external.ids, 1)}"
}

data "aws_subnet" "subnet_external_2" {
  vpc_id = "${data.aws_vpc.selected.id}"
  id = "${element(data.aws_subnet_ids.external.ids, 2)}"
}