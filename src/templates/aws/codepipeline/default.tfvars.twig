# Specify default values for variables defined in variables.tf

############
# provider #
############
account_id                 = "123456789012"
region                     = "us-east-1"

#############
# top level #
#############
codepipeline_name = "{{ name }}"

##################
# artifact store #
##################
codepipeline_artifact_store_type                = "S3"
codepipeline_artifact_store_encryption_key_type = "KMS"

############
# stage 01 #
############
codepipeline_stage_01_name = "Source"
codepipeline_stage_01_action_default = [{
	name             = "Source"
	category         = "Source"
	owner            = "ThirdParty"
	provider         = "GitHub"
	version          = "1"
	output_artifacts = ["test"]

	configuration {
		Owner      = "Terrahub"
		Repo       = "test"
		Branch     = "master"
	}
}]

############
# stage 02 #
############
codepipeline_stage_02_name = "Build"
codepipeline_stage_02_action_default = [{
	name            = "Build"
	category        = "Build"
	owner           = "AWS"
	provider        = "CodeBuild"
	input_artifacts = ["test"]
	version         = "1"

	configuration {
		ProjectName = "test"
	}
}]


