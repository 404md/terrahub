    variable:
      {{ name }}_username:
        type: 'string'
      {{ name }}_public_key:
        type: 'string'
      {{ name }}_encoding:
        type: 'string'
    output:
      id:
        value: '${aws_iam_user_ssh_key.{{ name }}.id}'
      thub_id:
        value: '${aws_iam_user_ssh_key.{{ name }}.id}'
      ssh_public_key_id:
        value: '${aws_iam_user_ssh_key.{{ name }}.ssh_public_key_id}'
      fingerprint:
        value: '${aws_iam_user_ssh_key.{{ name }}.fingerprint}'
      status:
        value: '${aws_iam_user_ssh_key.{{ name }}.status}'
