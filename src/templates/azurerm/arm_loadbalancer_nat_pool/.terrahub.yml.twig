      {{ name }}_name:
        type: 'string'
      {{ name }}_frontend_port_end:
        type: 'int'
      {{ name }}_backend_port:
        type: 'int'
      {{ name }}_frontend_ip_configuration_name:
        type: 'string'
      {{ name }}_loadbalancer_id:
        type: 'string'
      {{ name }}_protocol:
        type: 'string'
      {{ name }}_frontend_port_start:
        type: 'int'
    output:
      id:
        value: '${azurerm_arm_loadbalancer_nat_pool.{{ name }}.id}'
      thub_id:
        value: '${azurerm_arm_loadbalancer_nat_pool.{{ name }}.id}'
      frontend_ip_configuration_id:
        value: '${azurerm_arm_loadbalancer_nat_pool.{{ name }}.frontend_ip_configuration_id}'
