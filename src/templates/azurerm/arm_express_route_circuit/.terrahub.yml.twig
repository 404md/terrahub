    variable:
      {{ name }}_name:
        type: 'string'
      {{ name }}_service_provider_name:
        type: 'string'
      {{ name }}_peering_location:
        type: 'string'
      {{ name }}_bandwidth_in_mbps:
        type: 'int'
    output:
      id:
        value: '${azurerm_arm_express_route_circuit.{{ name }}.id}'
      thub_id:
        value: '${azurerm_arm_express_route_circuit.{{ name }}.id}'
      service_provider_provisioning_state:
        value: '${azurerm_arm_express_route_circuit.{{ name }}.service_provider_provisioning_state}'
      service_key:
        value: '${azurerm_arm_express_route_circuit.{{ name }}.service_key}'
