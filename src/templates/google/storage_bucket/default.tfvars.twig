# Specify default values for variables defined in variables.tf

#############
# top level #
#############
google_storage_bucket_name          = "{{ name }}"
google_storage_bucket_location      = "US"
google_project_id                   = "{{ name }}"
google_storage_bucket_force_destroy = true

########
# cors #
########
google_storage_bucket_cors_origin          = ["*"]
google_storage_bucket_cors_method          = ["GET", "PUT", "POST", "DELETE", "HEAD"]
google_storage_bucket_cors_response_header = ["Last-Modified"]
google_storage_bucket_cors_max_age_seconds = "3000"

##############
# versioning #
##############
google_storage_bucket_versioning_enabled = false

##########
# labels #
##########
custom_labels  = {}
default_labels = {
  "thubname"    = "{{ name }}"
  "thubcode"    = "{{ code }}"
  "thubenv"     = "default"
  "description" = "managed-by-terrahub"
}