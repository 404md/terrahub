    variable:
      {{ name }}_rrdatas:
        type: 'list'
      {{ name }}_ttl:
        type: 'int'
      {{ name }}_type:
        type: 'string'
      {{ name }}_managed_zone:
        type: 'string'
      {{ name }}_name:
        type: 'string'
    output:
      id:
        value: '${google_dns_record_set.{{ name }}.id}'
      thub_id:
        value: '${google_dns_record_set.{{ name }}.id}'
      project:
        value: '${google_dns_record_set.{{ name }}.project}'
