    resource:
      google_dns_record_set:
        {{ name }}:
          rrdatas: '${var.{{ name }}_rrdatas}'
          ttl: '${var.{{ name }}_ttl}'
          type: '${var.{{ name }}_type}'
          managed_zone: '${var.{{ name }}_managed_zone}'
          name: '${var.{{ name }}_name}'
