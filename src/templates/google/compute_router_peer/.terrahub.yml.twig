      {{ name }}_interface:
        type: 'string'
      {{ name }}_peer_asn:
        type: 'int'
      {{ name }}_name:
        type: 'string'
    output:
      id:
        value: '${google_compute_router_peer.{{ name }}.id}'
      thub_id:
        value: '${google_compute_router_peer.{{ name }}.id}'
